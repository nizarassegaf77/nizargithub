<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        app:cardCornerRadius="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                tools:text="@string/app_name" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:maxLines="2"
                android:text="@string/app_name"
                android:textColor="@color/colorText"
                tools:text="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageLanguage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:src="@drawable/ic_language_24dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_marginRight="@dimen/margin_large"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone"
                    android:textColor="@color/colorText"
                    tools:text="@string/app_name"
                    tools:visibility="visible" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/watcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_marginRight="7dp"
                    android:drawableStart="@drawable/ic_eye_black_24dp"
                    android:drawableLeft="@drawable/ic_eye_black_24dp"
                    android:drawablePadding="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size_small"
                    tools:text="@string/app_name" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_branch_black_24dp"
                    android:drawableLeft="@drawable/ic_branch_black_24dp"
                    android:drawablePadding="@dimen/margin_small"
                    android:textColor="@color/colorText"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_small"
                    tools:text="@string/app_name" />

            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="@dimen/text_size_small"
                tools:text="@string/app_name" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>